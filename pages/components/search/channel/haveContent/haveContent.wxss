@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

/* 内容 */
.content{
  padding: 20rpx;
  background-color: #fff;
  padding-top: 0;
}
.item{
  padding: 5rpx 0; 
  border-bottom: 1rpx solid #ccc;
  height: 250rpx;
  display: flex;
}
.item-img{
  width: 300rpx;
  height: 100%;
}
.info{
  margin-left: 15rpx;
  width: 380rpx;
  color: #aaa;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.info-content{
  font-size: 34rpx;
  color: #000;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2
}